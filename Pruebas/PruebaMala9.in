prog condicionesNumericas{

    (* El propósito de este programa es mostrar que no se puede colocar una expresión aritmética como condición. *)

    for (float i = 1; 8 + 7; i = i + 1.0) {
        println(i);
        if (i + 3) then {
            println(0);
        };
        exit if 65 * 98;
    };

    while 1 + 1 loop {
        println(1);
    } finally {
        println(2);
    };

}